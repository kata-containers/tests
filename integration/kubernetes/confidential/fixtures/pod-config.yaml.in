apiVersion: v1
kind: Pod
metadata:
  name: busybox-cc
  annotations:
    io.containerd.cri.runtime-handler: $RUNTIMECLASS
spec:
  runtimeClassName: $RUNTIMECLASS
  containers:
  - name: nginx
    image: $IMAGE
    imagePullPolicy: Always
  imagePullSecrets:
  - name: cococred
