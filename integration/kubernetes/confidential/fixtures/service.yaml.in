kind: Service
apiVersion: v1
metadata:
  name: "$NAME"
spec:
  selector:
    app: "$NAME"
  ports:
  - port: 22
---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: "$NAME"
spec:
  selector:
    matchLabels:
      app: "$NAME"
  template:
    metadata:
      labels:
        app: "$NAME"
      annotations:
        io.containerd.cri.runtime-handler: "$RUNTIMECLASS"
    spec:
      runtimeClassName: "$RUNTIMECLASS"
      containers:
      - name: "$NAME"
        image: "$IMAGE"
        imagePullPolicy: Always
